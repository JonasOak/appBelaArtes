<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Cabeçalho -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estatísticas do Sistema"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:padding="8dp"/>

        <!-- Card para Produtos Cadastrados -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Produtos Cadastrados"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/admin_count_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:hint="0"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card para Usuários Cadastrados -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Usuários Cadastrados"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/admin_count_client"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:hint="0"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card para Produtos Solicitados -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Produtos Solicitados"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/admin_count_request_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:hint="0"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botão para Atualizar -->
        <Button
            android:id="@+id/btn_admin_home_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atualizar Dados"
            android:layout_marginTop="24dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:elevation="4dp"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>